<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dingdan_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="全部订单"
            android:textColor="@color/gouwuche"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" 
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/dfukuan_textView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
           android:paddingLeft="15dp"
            android:layout_weight="1"
            android:text="待付款"
            android:textColor="@color/bianji"
            android:textSize="20sp" 
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/dpingjia_textView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:text="待评价"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dshouhuo_textView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:text="待收货"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dfahuo_textView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:text="待发货"
            android:textSize="20sp" />
    </LinearLayout>
    
    <ListView 
        android:id="@+id/dingdan_listView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:dividerHeight="1dp"
        
        ></ListView>
    

    

</LinearLayout>