<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/tianchongse" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/biaoti_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/sichu"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="芒果姐姐小厨房"
            android:textColor="@color/xuanlan" />

        <TextView
            android:id="@+id/biaoti_bianji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="11dp"
            android:gravity="center"
            android:text="@string/bianji"
            android:textColor="@color/xuanlan"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="1dp"
        android:background="@color/tianchongse"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.77" >

            <ImageView
                android:id="@+id/meishi_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="9.5dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="9.5dp"
                android:background="@drawable/meishi" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/meishi_image"
                android:layout_centerVertical="true"
                android:layout_marginRight="34dp"
                android:background="@null"
                android:src="@drawable/shipingbofang2" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/neirong_textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="美味与颜值的双重缴械,从舌尖到心底的惊艳诱惑。"
                android:textColor="@color/neirong"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/jiage_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="@string/jiage"
                    android:textColor="@color/jiage"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/yuanjia_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="11sp"
                    android:text="¥ 316"
                    android:gravity="center"
          
                    android:textColor="#b0b0b0"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>