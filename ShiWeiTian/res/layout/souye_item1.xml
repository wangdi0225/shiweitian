<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        

        <ViewFlipper
            android:id="@+id/souye_viewflipper"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/timg" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/timg1" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/timg2" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/timg3" />
        </ViewFlipper>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <LinearLayout
                android:id="@+id/viewGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/souye_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/baise"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/souye_zuire"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/denglu4"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/zuire"
                android:textColor="@layout/yanse3"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/souye_zuixin"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/denglu1"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="@string/zuixin"
                android:textColor="@layout/yanse3"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>