<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijingse">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:layout_marginTop="11dp"
    android:background="@color/bai">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp">
        <ImageView
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_image"
            android:src="@drawable/ic_launcher"
           />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/biaoti_image"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="三鲜金鱼蒸饺"
                android:textColor="@color/zitise"/>
            <TextView
                android:id="@+id/jianjie_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="14sp"
                android:textColor="@color/zitise2"
                android:text="为宝宝补充铁元素，促进宝宝的视力发育和上皮组织生长"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="删除"
                    android:drawablePadding="5dp"
                    android:textColor="@color/zitise1"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/delete"/>
                <TextView
                    android:id="@+id/bianji"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="编辑"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/zitise1"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/bianji"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>