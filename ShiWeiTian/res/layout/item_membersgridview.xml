<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
       
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="@color/item_members" >

       <TextView
           android:id="@+id/onetext"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="17dp"
           android:text="连续包月"
           android:textSize="11sp" />

       <TextView
           android:id="@+id/twotext"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/onetext"
           android:layout_centerHorizontal="true"
           android:text="15快/每月"
           android:layout_marginTop="7dp"
           android:textColor="@color/red"
           android:textSize="14sp" />
       
       <TextView 
           android:id="@+id/threetext"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:text="自动续费,可随时取消"
           android:layout_below="@id/twotext"
           android:textSize="10sp"
           android:layout_marginTop="3dp"
           android:textColor="@color/VIPtypecolor"
           />
   </RelativeLayout>

</LinearLayout>