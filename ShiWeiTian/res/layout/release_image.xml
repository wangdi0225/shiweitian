<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="17dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="22dp">
            <TextView
                android:id="@+id/image_file"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="上传成品效果图"
                android:textColor="#A69389"
                android:textSize="11sp"
                android:gravity="center_vertical"
                android:layout_marginRight="28dp"
                android:paddingLeft="12dp"
                android:layout_height="match_parent"
                android:background="@drawable/shuru"/>
            <Button
                android:id="@+id/sc_image"
                android:layout_width="92dp"
                android:gravity="center"
                android:textSize="11dp"
                android:background="@drawable/but"
                android:textColor="@color/bai"
                android:layout_height="match_parent"
                android:text="上传本地图片"/>
        </LinearLayout>
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="11dp" >

            <Spinner
                style="@style/spinner_style"
                android:id="@+id/sp_zl"
                android:layout_width="169.5dp"
                android:layout_height="27dp"
                android:background="@drawable/shuru" >
            </Spinner>

            <ImageButton
                android:id="@+id/ib_zl"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="31dp"
                android:background="@drawable/but"
                android:gravity="center"
                android:src="@drawable/xiala" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="11dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="使用的食材"
                android:textColor="#A69389"
                android:textSize="11sp"
                android:gravity="center_vertical"
                android:layout_marginRight="28dp"
                android:paddingLeft="12dp"
                android:layout_height="match_parent"
                android:background="@drawable/shuru"/>
            <ImageButton
                android:layout_width="27dp"
                android:gravity="center"
                android:src="@drawable/jia"
                android:background="@drawable/yuan"
                android:layout_height="27dp"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="11dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="制作步骤"
                android:textColor="#A69389"
                android:textSize="11sp"
                android:gravity="center_vertical"
                android:layout_marginRight="28dp"
                android:paddingLeft="12dp"
                android:layout_height="match_parent"
                android:background="@drawable/shuru"/>
            <ImageButton
                android:layout_width="27dp"
                android:gravity="center"
                android:src="@drawable/jia"
                android:background="@drawable/yuan"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="11dp" >

            <Spinner
                style="@style/spinner_style"
                android:id="@+id/sp_nd"
                android:layout_width="169.5dp"
                android:layout_height="27dp"
                android:background="@drawable/shuru" >
            </Spinner>

            <ImageButton
                android:id="@+id/ib_nd"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="31dp"
                android:background="@drawable/but"
                android:gravity="center"
                android:src="@drawable/xiala" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="11dp">
           <EditText
            android:layout_width="228dp"
            android:hint="标题名称"
            android:textColorHint="#A69389"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_height="match_parent"
            android:background="@drawable/shuru"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="11dp">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="作品简单描述，30字以内"
                android:textColorHint="#A69389"
                android:textSize="11sp"
                android:paddingBottom="15dp"
                android:layout_marginRight="28dp"
                android:paddingLeft="12dp"
                android:layout_height="match_parent"
                android:background="@drawable/shuru"/>

        </LinearLayout>
        <Button
            android:id="@+id/fabu_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/but"
            android:layout_marginTop="75dp"
            android:text="发布"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/bai"/>

    </LinearLayout>

</LinearLayout>